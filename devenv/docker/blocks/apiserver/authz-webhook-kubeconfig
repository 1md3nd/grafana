# NOTE: In this directory primarily because the certs are here and can be mounted in the kind
# container all at once
clusters:
- name: authz-webhook
  cluster:
    certificate-authority: /config/certs/ca.pem
    server: https://host.docker.internal:3443/authnz
users:
- name: api-server
  user:
    # authnz webhook plugin in k8s will use the specified certs to authenticate to the webhook
    client-certificate: /config/authz/authz-webhook-user.pem
    client-key: /config/authz/authz-webhook-user-key.pem
current-context: authz-webhook
contexts:
- context:
    cluster: authz-webhook
    user: api-server
  name: authz-webhook
