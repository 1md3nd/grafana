{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/nx-schema.json",
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "typecheck", "lint", "generateThemes"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "prettier:check": {
      "dependsOn": ["prettier:checkDocs"]
    },
    "lint": {
      "dependsOn": ["lint:sass"]
    }
  }
}
