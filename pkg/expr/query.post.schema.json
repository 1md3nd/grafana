{
  "$schema": "https://json-schema.org/draft-04/schema",
  "oneOf": [
    {
      "properties": {
        "expression": {
          "type": "string",
          "minLength": 1,
          "description": "General math expression",
          "examples": [
            "$A + 1",
            "$A/$B"
          ]
        },
        "queryType": {
          "type": "string",
          "pattern": "^math$"
        },
        "hide": {
          "$ref": "#/definitions/hide"
        },
        "resultAssertions": {
          "$ref": "#/definitions/resultAssertions"
        },
        "datasourceId": {
          "$ref": "#/definitions/datasourceId"
        },
        "maxDataPoints": {
          "$ref": "#/definitions/maxDataPoints"
        },
        "intervalMs": {
          "$ref": "#/definitions/intervalMs"
        },
        "refId": {
          "$ref": "#/definitions/refId"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        },
        "datasource": {
          "$ref": "#/definitions/datasource"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expression",
        "queryType",
        "refId"
      ]
    },
    {
      "properties": {
        "expression": {
          "type": "string",
          "minLength": 1,
          "description": "Reference to single query result",
          "examples": [
            "$A"
          ]
        },
        "reducer": {
          "type": "string",
          "enum": [
            "sum",
            "mean",
            "min",
            "max",
            "count",
            "last"
          ],
          "description": "The reducer\n\n\nPossible enum values:\n - `\"sum\"` \n - `\"mean\"` \n - `\"min\"` \n - `\"max\"` \n - `\"count\"` \n - `\"last\"` "
        },
        "settings": {
          "properties": {
            "mode": {
              "type": "string",
              "enum": [
                "dropNN",
                "replaceNN"
              ],
              "description": "Non-number reduce behavior\n\n\nPossible enum values:\n - `\"dropNN\"` Drop non-numbers\n - `\"replaceNN\"` Replace non-numbers"
            },
            "replaceWithValue": {
              "type": "number",
              "description": "Only valid when mode is replace"
            }
          },
          "additionalProperties": false,
          "type": "object",
          "required": [
            "mode"
          ],
          "description": "Reducer Options"
        },
        "queryType": {
          "type": "string",
          "pattern": "^reduce$"
        },
        "hide": {
          "$ref": "#/definitions/hide"
        },
        "resultAssertions": {
          "$ref": "#/definitions/resultAssertions"
        },
        "datasourceId": {
          "$ref": "#/definitions/datasourceId"
        },
        "maxDataPoints": {
          "$ref": "#/definitions/maxDataPoints"
        },
        "intervalMs": {
          "$ref": "#/definitions/intervalMs"
        },
        "refId": {
          "$ref": "#/definitions/refId"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        },
        "datasource": {
          "$ref": "#/definitions/datasource"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expression",
        "reducer",
        "queryType",
        "refId"
      ]
    },
    {
      "properties": {
        "downsampler": {
          "type": "string",
          "description": "The downsample function"
        },
        "expression": {
          "type": "string",
          "minLength": 1,
          "description": "The math expression",
          "examples": [
            "$A + 1",
            "$A"
          ]
        },
        "upsampler": {
          "type": "string",
          "description": "The upsample function"
        },
        "window": {
          "type": "string",
          "minLength": 1,
          "description": "The time durration",
          "examples": [
            "1w",
            "10m"
          ]
        },
        "queryType": {
          "type": "string",
          "pattern": "^resample$"
        },
        "maxDataPoints": {
          "$ref": "#/definitions/maxDataPoints"
        },
        "intervalMs": {
          "$ref": "#/definitions/intervalMs"
        },
        "hide": {
          "$ref": "#/definitions/hide"
        },
        "resultAssertions": {
          "$ref": "#/definitions/resultAssertions"
        },
        "datasourceId": {
          "$ref": "#/definitions/datasourceId"
        },
        "refId": {
          "$ref": "#/definitions/refId"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        },
        "datasource": {
          "$ref": "#/definitions/datasource"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expression",
        "window",
        "downsampler",
        "upsampler",
        "queryType",
        "refId"
      ],
      "description": "QueryType = resample"
    },
    {
      "properties": {
        "conditions": {
          "items": {
            "properties": {
              "evaluator": {
                "properties": {
                  "params": {
                    "items": {
                      "type": "number"
                    },
                    "type": "array"
                  },
                  "type": {
                    "type": "string",
                    "description": "e.g. \"gt\""
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "params",
                  "type"
                ]
              },
              "operator": {
                "properties": {
                  "type": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "type"
                ]
              },
              "query": {
                "properties": {
                  "params": {
                    "items": {
                      "type": "string"
                    },
                    "type": "array"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "params"
                ]
              },
              "reducer": {
                "properties": {
                  "type": {
                    "type": "string"
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "type"
                ]
              }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
              "evaluator",
              "operator",
              "query",
              "reducer"
            ],
            "description": "ConditionJSON is the JSON model for a single condition in ConditionsCmd."
          },
          "type": "array"
        },
        "queryType": {
          "type": "string",
          "pattern": "^classic_conditions$"
        },
        "refId": {
          "$ref": "#/definitions/refId"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        },
        "datasource": {
          "$ref": "#/definitions/datasource"
        },
        "hide": {
          "$ref": "#/definitions/hide"
        },
        "resultAssertions": {
          "$ref": "#/definitions/resultAssertions"
        },
        "datasourceId": {
          "$ref": "#/definitions/datasourceId"
        },
        "maxDataPoints": {
          "$ref": "#/definitions/maxDataPoints"
        },
        "intervalMs": {
          "$ref": "#/definitions/intervalMs"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "conditions",
        "queryType",
        "refId"
      ]
    },
    {
      "properties": {
        "conditions": {
          "items": {
            "properties": {
              "evaluator": {
                "properties": {
                  "params": {
                    "items": {
                      "type": "number"
                    },
                    "type": "array"
                  },
                  "type": {
                    "type": "string",
                    "description": "e.g. \"gt\""
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "params",
                  "type"
                ]
              },
              "loadedDimensions": {
                "additionalProperties": true,
                "type": "object"
              },
              "unloadEvaluator": {
                "properties": {
                  "params": {
                    "items": {
                      "type": "number"
                    },
                    "type": "array"
                  },
                  "type": {
                    "type": "string",
                    "description": "e.g. \"gt\""
                  }
                },
                "additionalProperties": false,
                "type": "object",
                "required": [
                  "params",
                  "type"
                ]
              }
            },
            "additionalProperties": false,
            "type": "object",
            "required": [
              "evaluator",
              "unloadEvaluator",
              "loadedDimensions"
            ]
          },
          "type": "array",
          "description": "Threshold Conditions"
        },
        "expression": {
          "type": "string",
          "minLength": 1,
          "description": "Reference to single query result",
          "examples": [
            "$A"
          ]
        },
        "queryType": {
          "type": "string",
          "pattern": "^threshold$"
        },
        "maxDataPoints": {
          "$ref": "#/definitions/maxDataPoints"
        },
        "intervalMs": {
          "$ref": "#/definitions/intervalMs"
        },
        "hide": {
          "$ref": "#/definitions/hide"
        },
        "resultAssertions": {
          "$ref": "#/definitions/resultAssertions"
        },
        "datasourceId": {
          "$ref": "#/definitions/datasourceId"
        },
        "datasource": {
          "$ref": "#/definitions/datasource"
        },
        "refId": {
          "$ref": "#/definitions/refId"
        },
        "timeRange": {
          "$ref": "#/definitions/timeRange"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "expression",
        "conditions",
        "queryType",
        "refId"
      ]
    }
  ],
  "properties": {},
  "type": "object",
  "description": "Query model (the payload sent to /ds/query)"
}