{
  "$schema": "https://json-schema.org/draft-04/schema",
  "properties": {
    "format": {
      "type": "string",
      "description": "The response format"
    },
    "expr": {
      "type": "string",
      "description": "The actual expression/query that will be evaluated by Prometheus"
    },
    "range": {
      "type": "boolean",
      "description": "Returns a Range vector, comprised of a set of time series containing a range of data points over time for each time series"
    },
    "instant": {
      "type": "boolean",
      "description": "Returns only the latest value that Prometheus has scraped for the requested time series"
    },
    "exemplar": {
      "type": "boolean",
      "description": "Execute an additional query to identify interesting raw samples relevant for the given expr"
    },
    "editorMode": {
      "type": "string",
      "description": "what we should show in the editor"
    },
    "intervalFactor": {
      "type": "number",
      "description": "@deprecated Used to specify how many times to divide max data points by. We use max data points under query options\nSee https://github.com/grafana/grafana/issues/48081"
    },
    "legendFormat": {
      "type": "string",
      "description": "Series name override or template. Ex. {{hostname}} will be replaced with label value for hostname"
    },
    "scope": {
      "properties": {
        "matchers": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "matchers"
      ],
      "description": "???"
    },
    "refId": {
      "type": "string"
    },
    "resultAssertions": {
      "properties": {
        "type": {
          "type": "string"
        },
        "typeVersion": {
          "items": {
            "type": "integer"
          },
          "type": "array",
          "maxItems": 2,
          "minItems": 2
        },
        "maxBytes": {
          "type": "integer"
        },
        "maxFrames": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "typeVersion"
      ]
    },
    "timeRange": {
      "properties": {
        "from": {
          "type": "string"
        },
        "to": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "from",
        "to"
      ]
    },
    "datasource": {
      "properties": {
        "type": {
          "type": "string"
        },
        "uid": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "type",
        "uid"
      ]
    },
    "datasourceId": {
      "type": "integer"
    },
    "queryType": {
      "type": "string"
    },
    "maxDataPoints": {
      "type": "integer"
    },
    "intervalMs": {
      "type": "number"
    },
    "hide": {
      "type": "boolean"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": [
    "expr"
  ],
  "description": "Save model (the payload saved in dashboards and alerts)"
}