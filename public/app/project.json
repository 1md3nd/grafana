{
  "$schema": "https://raw.githubusercontent.com/nrwl/nx/master/packages/nx/schemas/project-schema.json",
  "name": "grafana-app",
  "root": "public/app",
  "targets": {
    "build": {
      "executor": "nx:run-script",
      "options": {
        "script": "build"
      },
      "dependsOn": ["generateThemes"],
      "inputs": ["sharedGlobals", "publicFiles", "^default"],
      "outputs": ["{projectRoot}/../build"]
    },
    "lint": {
      "executor": "nx:run-script",
      "options": {
        "script": "lint"
      },
      "dependsOn": ["lint:sass"]
    },
    "start": {
      "executor": "nx:run-script",
      "options": {
        "script": "start"
      },
      "dependsOn": ["generateThemes"],
      "outputs": ["{projectRoot}/../build"]
    },
    "generateThemes": {
      "executor": "nx:run-script",
      "options": {
        "script": "generateThemes"
      },
      "inputs": ["themes"],
      "outputs": ["{projectRoot}/../sass/_variables.*.scss"]
    }
  }
}
